<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#ffff"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4.2">

    </Space>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="4">

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

        </Space>

        <EditText
            android:id="@+id/editText_aqi_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:hint="YYYY-MM-DD"
            android:textColorHint="@color/colorNavyLiker"
            android:backgroundTint="@color/colorNavyLiker"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

        </Space>

        <EditText
            android:id="@+id/editText_aqi_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="YYYY-MM-DD"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorNavyLiker"
            android:backgroundTint="@color/colorNavyLiker"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

        </Space>

    </LinearLayout>


    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/so2_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/login_btn_ani"
                android:text="SO2"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorNavyLiker"
                android:button="@android:color/transparent"
                android:textSize="20sp"
                >

            </RadioButton>

            <RadioButton
                android:id="@+id/no2_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/login_btn_ani"
                android:text="NO2"
                android:button="@android:color/transparent"
                android:textColor="@color/colorNavyLiker"
                android:textSize="20sp">

            </RadioButton>

            <RadioButton
                android:id="@+id/co_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/login_btn_ani"
                android:text="CO"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorNavyLiker"
                android:textSize="20sp">

            </RadioButton>

            <RadioButton
                android:id="@+id/o3_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/login_btn_ani"
                android:text="O3"
                android:textColor="@color/colorNavyLiker"
                android:button="@android:color/transparent"
                android:textSize="20sp">

            </RadioButton>

            <RadioButton
                android:id="@+id/pm25_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/login_btn_ani"
                android:button="@android:color/transparent"
                android:text="PM25"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorNavyLiker"
                android:textSize="20sp">

            </RadioButton>
        </RadioGroup>




    </LinearLayout>

</LinearLayout>