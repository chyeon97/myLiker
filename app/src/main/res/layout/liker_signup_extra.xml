<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="9"
        android:background="#ffffff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_signup_extra_titlebar_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:gravity="center"
                android:fontFamily="@font/bold"
                android:text="Register"
                android:textColor="@color/colorNavyLiker"
                android:textSize="40dp"
                android:textStyle="bold"

                />

            <ImageView
                android:id="@+id/imageView_signup_extra_titlebar_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/liker_logo" />

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.5">

            </Space>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5.6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:text="User Name"
                        android:textSize="20sp"
                        android:textColor="@color/colorNavyLiker">
                    </TextView>

                    <TextView
                        android:id="@+id/TextView_signup_extra_username"
                        android:inputType="textPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorNavyLiker"
                        android:clickable="false"
                        android:focusable="false"
                        android:text=""
                        android:textColor="@color/colorDarkGrayLiker"
                        android:textSize="20sp">
                    </TextView>


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5.6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Email"
                        android:textSize="20sp"
                        android:textColor="@color/colorNavyLiker"></TextView>

                    <TextView
                        android:id="@+id/TextView_Text_signup_extra_email"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorNavyLiker"
                        android:clickable="false"
                        android:focusable="false"
                        android:textColor="@color/colorDarkGrayLiker"
                        android:textSize="20sp">

                    </TextView>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5.6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_signup_extra_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Password"
                        android:textSize="20sp"
                        android:textColor="@color/colorNavyLiker">

                    </TextView>

                    <EditText
                        android:id="@+id/editText_signup_extra_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorNavyLiker"
                        android:inputType="textPassword"
                        android:textColor="#000"
                        android:textSize="20sp">

                    </EditText>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5.6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_signup_extra_password_check"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="Password Check"
                        android:textColor="@color/colorNavyLiker"
                        android:textSize="20sp">

                    </TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true">

                        <EditText
                            android:id="@+id/editText_signup_extra_password_check"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:backgroundTint="@color/colorNavyLiker"
                            android:inputType="textPassword"
                            android:textColor="#000"
                            android:textSize="20sp"></EditText>

                        <ImageView
                            android:id="@+id/incorrect_img"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            app:srcCompat="@drawable/cross_small"
                            android:visibility="invisible"

                            />
                        <ImageView
                            android:id="@+id/corrcet_img"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            app:srcCompat="@drawable/tick"
                            android:visibility="invisible"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5.6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_signup_extra_birth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Birth Year"
                        android:textSize="20sp"
                        android:textColor="@color/colorNavyLiker">

                    </TextView>

                    <EditText
                        android:id="@+id/editText_signup_extra_birth"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="YYYY"
                        android:textColor="#000"
                        android:textColorHint="@color/colorDarkGrayLiker"
                        android:enabled="false"
                        android:backgroundTint="@color/colorNavyLiker"
                        android:textSize="20sp">

                    </EditText>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5.6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_signup_extra_gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="Gender"
                        android:textSize="20sp"
                        android:textColor="@color/colorNavyLiker">

                    </TextView>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >

                        <RadioButton
                            android:enabled="false"
                            android:id="@+id/radioButton_signup_extra_male"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:background="@drawable/radio_flat_selector"
                            android:button="@android:color/transparent"
                            android:text="Male"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@drawable/radio_flat_text_selector"
                            >

                        </RadioButton>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            >

                        </Space>

                        <RadioButton
                            android:enabled="false"
                            android:id="@+id/radioButton_signup_extra_female"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:gravity="center"
                            android:background="@drawable/radio_flat_selector"
                            android:button="@android:color/transparent"
                            android:text="Female"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@drawable/radio_flat_text_selector"
                            >

                        </RadioButton>

                    </RadioGroup>


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5.6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_signup_extra_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Phone Number"
                        android:textSize="20sp"
                        android:textColor="@color/colorNavyLiker">

                    </TextView>

                    <EditText
                        android:id="@+id/editText_signup_extra_phone"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:backgroundTint="@color/colorNavyLiker"
                        android:enabled="false"
                        android:textSize="20sp">
                    </EditText>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5.6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_signup_extra_signup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@drawable/signup_btn_ani"
                        android:text="Register to Liker"
                        android:enabled="false"
                        android:textSize="20sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5.6"
                        >
                    </Space>

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.5">

            </Space>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
